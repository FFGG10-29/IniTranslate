{
  "name": "ini-translate",
  "version": "1.0.0",
  "description": "INI文件批量翻译工具",
  "main": "extension.js",
  "bin": "extension.js",
  "scripts": {
    "build": "pkg . --targets node16-win-x64,node16-linux-x64,node16-macos-x64 --output dist/ini-translate",
    "build-win": "pkg . --target node16-win-x64 --output dist/ini-translate.exe",
    "build-linux": "pkg . --target node16-linux-x64 --output dist/ini-translate",
    "build-mac": "pkg . --target node16-macos-x64 --output dist/ini-translate"
  },
  "pkg": {
    "assets": [
      "excel/**/*",
      "input/**/*",
      "export/**/*",
      "backup/**/*",
      "translations.json"
    ],
    "output": "dist"
  }
}